<controls:MetroWindow x:Class="Hearthstone_Deck_Tracker.GraveyardWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                      xmlns:local="clr-namespace:Hearthstone_Deck_Tracker"
                      xmlns:deckPicker="clr-namespace:Hearthstone_Deck_Tracker.Controls.DeckPicker"
                      xmlns:controls1="clr-namespace:Hearthstone_Deck_Tracker.Controls"
                      xmlns:themes="clr-namespace:Hearthstone_Deck_Tracker.Utility.Themes"
                      Title="玩家坟场" Height="440" Width="210" MinWidth="210" MaxWidth="250"
                      Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}"
                      Activated="GraveyardWindow_OnActivated"
                      Closed="MetroWindow_Closed"
                      Icon="{StaticResource AppIcon}"
                      Loaded="GraveyardWindow_OnLoaded"
                      SizeChanged="GraveyardWindow_OnSizeChanged"
                      Deactivated="GraveyardWindow_OnDeactivated">
    <controls:MetroWindow.Resources>
        <themes:ThemeManager x:Key="ThemeManager"/>
    </controls:MetroWindow.Resources>
    <controls:MetroWindow.IconTemplate>
        <DataTemplate>
            <Rectangle Margin="2" Opacity="0.7">
                <Rectangle.Fill>
                    <VisualBrush Visual="{StaticResource hdticon}" />
                </Rectangle.Fill>
            </Rectangle>
        </DataTemplate>
    </controls:MetroWindow.IconTemplate>
    <Grid Name="WindowGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="9*"/>
            <ColumnDefinition Width="65*"/>
        </Grid.ColumnDefinitions>
        <!--Button x:Name="graveTitle" VerticalAlignment="Top" HorizontalAlignment="Center" FontSize="15" Width="90" Height="32" Content="玩家坟场" Click="graveTitle_Click" Foreground="#eeeeee" Grid.ColumnSpan="2"/>
        <Button x:Name="oppoTitle" VerticalAlignment="Top" HorizontalAlignment="Right" FontSize="16" Width="90" Height="32" Content="对手卡组" Click="oppoTitle_Click" Foreground="#eeeeee" Grid.Column="1"/ -->
        <StackPanel Name="StackPanelMain" Margin="0,3,0,0" Grid.ColumnSpan="2">
            <Viewbox Name="ViewBoxGraveyard" StretchDirection="DownOnly" Stretch="Fill" MaxHeight="{Binding PlayerDeckMaxHeight, RelativeSource={RelativeSource AncestorType=local:GraveyardWindow}}">
                <controls1:AnimatedCardList x:Name="ListViewGraveyard" Background="Transparent" BorderThickness="0"
                                ScrollViewer.HorizontalScrollBarVisibility="Disabled" Width="230"
                                ScrollViewer.VerticalScrollBarVisibility="Disabled" IsEnabled="False"
                                ScrollViewer.CanContentScroll="False">
                    <controls1:AnimatedCardList.ItemContainerStyle>
                        <Style TargetType="controls1:AnimatedCard">
                            <Setter Property="ToolTipService.ShowOnDisabled" Value="True" />
                            <Setter Property="ToolTipService.ShowDuration" Value="60000" />
                            <Setter Property="ToolTipService.IsEnabled" Value="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:GraveyardWindow}}, Path=ShowToolTip}" />
                            <Setter Property="ToolTip">
                                <Setter.Value>
                                    <ToolTip Background="Transparent" BorderBrush="Transparent">
                                        <local:CardToolTip/>
                                    </ToolTip>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Margin" Value="0,1,0,0"/>
                        </Style>
                    </controls1:AnimatedCardList.ItemContainerStyle>
                </controls1:AnimatedCardList>
            </Viewbox>
        </StackPanel>
        <StackPanel Name="StackPanelMainOppo" Margin="0,33,0,0" Visibility="Hidden" Grid.ColumnSpan="2">
            <Viewbox Name="ViewBoxOppoDeck" StretchDirection="DownOnly" Stretch="Fill" MaxHeight="{Binding PlayerDeckMaxHeight, RelativeSource={RelativeSource AncestorType=local:GraveyardWindow}}">
                <controls1:AnimatedCardList x:Name="ListViewOppoDeck" Background="Transparent" BorderThickness="0"
                                ScrollViewer.HorizontalScrollBarVisibility="Disabled" Width="230"
                                ScrollViewer.VerticalScrollBarVisibility="Disabled" IsEnabled="False"
                                ScrollViewer.CanContentScroll="False">
                    <controls1:AnimatedCardList.ItemContainerStyle>
                        <Style TargetType="controls1:AnimatedCard">
                            <Setter Property="ToolTipService.ShowOnDisabled" Value="True" />
                            <Setter Property="ToolTipService.ShowDuration" Value="60000" />
                            <Setter Property="ToolTipService.IsEnabled" Value="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:GraveyardWindow}}, Path=ShowToolTip}" />
                            <Setter Property="ToolTip">
                                <Setter.Value>
                                    <ToolTip Background="Transparent" BorderBrush="Transparent">
                                        <local:CardToolTip/>
                                    </ToolTip>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Margin" Value="0,1,0,0"/>
                        </Style>
                    </controls1:AnimatedCardList.ItemContainerStyle>
                </controls1:AnimatedCardList>
            </Viewbox>
        </StackPanel>
    </Grid>

</controls:MetroWindow>